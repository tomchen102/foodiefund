{
  "extends": ["next", "next/core-web-vitals", "plugin:@typescript-eslint/recommended", "prettier"],
  "plugins": ["@typescript-eslint", "prettier", "import"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "singleQuote": false,
        "printWidth": 120,
        "tabWidth": 2,
        "trailingComma": "es5",
        "endOfLine": "auto",
        "max-len": [
          "error",
          {
            "code": 120
          }
        ],
        "object-curly-newline": [
          "error",
          {
            "multiline": true,
            "consistent": true
          }
        ],
        "object-property-newline": [
          "error",
          {
            "allowAllPropertiesOnSameLine": true
          }
        ]
      }
    ]
  }
}
